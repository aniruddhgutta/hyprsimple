# Installing packages
sudo pacman -S archlinux-keyring #keyrings 
sudo pacman -S brightnessctl unzip blueman bluez git
sudo pacman -S hyprland rofi-wayland hyprpaper waybar


# Fonts
sudo pacman -S noto-fonts-emoji ttf-jetbrains-mono-nerd ttf-iosevka-nerd nerd-fonts noto-fonts ttf-fira-code ttf-firacode-nerd ttf-font-awesome
yay -S ttf-poppins
sudo pacman -S papirus-icon-theme


# Thunar and Disks
sudo pacman -S file-roller gvfs thunar-volman thunar-archive-plugin thunar-media-tags-plugin
yay -S tumbler
sudo pacman -S gnome-disk-utility ntfs-3g


# Nvidia
sudo pacman -S nvidia nvidia-utils nvidia-settings
micro /etc/mkinitcpio.conf 
	MODULES=(nvidia nvidia_modeset nvidia_uvm nvidia_drm)
micro /etc/modprobe.d/nvidia.conf
	options nvidia_drm modeset=1 fbdev=1
sudo mkinitcpio -P #rebuilding initramfs
systemctl enable nvidia-suspend.service
systemctl enable nvidia-resume.service
systemctl enable nvidia-hibernate.service


# Audio
sudo pacman -S pipewire-audio pipewire-pulse pipewire-alsa pavucontrol


# Notifications
sudo pacman -S dunst pamixer libcanberra


# Cool programs
sudo pacman -s bat zoxide rsync
sudo pacman -S zathura zathura-cb zathura-pdf-mupdf #zathura


# Theming
sudo pacman -S kvantum qt5ct qt6ct nwg-look kvantum-qt5 papirus-icon-theme qt5-quickcontrols2 neofetch
yay -S sddm-conf-git


# Programs
sudo pacman -S mpv micro zathura zathura-pdf-mupdf


# Clipboard and screenshots
yay -S wl-clipboard
sudo pacman -S grim slurp



#███╗   ███╗██╗ ██████╗██████╗  ██████╗ 
#████╗ ████║██║██╔════╝██╔══██╗██╔═══██╗
#██╔████╔██║██║██║     ██████╔╝██║   ██║
#██║╚██╔╝██║██║██║     ██╔══██╗██║   ██║
#██║ ╚═╝ ██║██║╚██████╗██║  ██║╚██████╔╝
#╚═╝     ╚═╝╚═╝ ╚═════╝╚═╝  ╚═╝ ╚═════╝                                        
# Micro plugins
 micro -plugin install runit
 micro -plugin install palettero
 micro -plugin install cheat
 micro -plugin install lsp
 micro -plugin install manipulator



#██╗   ██╗ █████╗ ██╗   ██╗
#╚██╗ ██╔╝██╔══██╗╚██╗ ██╔╝
