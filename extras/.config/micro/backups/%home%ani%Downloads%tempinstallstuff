# Yay installation
pacman -S --needed git base-devel && git clone https://aur.archlinux.org/yay-bin.git && cd yay-bin && makepkg -si


# Yay packages
yay -S thorium-browser-bin
yay -S wlogout
yay -S qimgv #pacman -S qt5-wayland
yay -S r-quick-share
yay -S sddm-conf-git


# Polkit
yay -S xfce-polkit



#███████╗██████╗ ██████╗ ███╗   ███╗
#██╔════╝██╔══██╗██╔══██╗████╗ ████║
#███████╗██║  ██║██║  ██║██╔████╔██║
#╚════██║██║  ██║██║  ██║██║╚██╔╝██║
#███████║██████╔╝██████╔╝██║ ╚═╝ ██║
#╚══════╝╚═════╝ ╚═════╝ ╚═╝     ╚═╝                                   
# SDDM Theme setup
#Dependencies
pacman -Syu qt6-svg qt6-declarative


#Installing
sudo cp -r /dotfiles/catppuccin-sddm-mocha /usr/share/sddm/themes
echo /etc/sddm.conf
[Theme]
Current=catppuccin-mocha


# Spotify
yay -S spotify zenity ffmpeg4.4 spicetify-cli
curl -fsSL https://raw.githubusercontent.com/spicetify/marketplace/main/resources/install.sh | sh #marketplace


# Spicetify stuff
sudo chmod a+wr /opt/spotify
sudo chmod a+wr /opt/spotify/Apps -R


# Copying configs
cd dotfiles-v2


# Hyprland
cp -r .config/hypr ~/.config/


# Waybar
cp -r .config/waybar ~/.config/


# mpv
cp -r .config/mpv ~/.config/


# kitty
cp -r .config/kitty ~/.config/


# bash scripts
cp -r .local/bin ~/.local/


# Prism Launcher
cp -r .local/share/PrismLauncher  ~/.local/share/


# KDE Colors
cp -r .local/share/color-schemes ~/.local/share/
cp -r .local/share/plasma ~/.local/share/


# bash and zsh
cp -r .gtkrc-2.0 ~/
cp -r .zsh_history 0 ~/
cp -r .bash_history ~/


# gtk
cp -r .local/share/nwg-look ~/.local/share/


# sddm theme
pacman -Syu qt6-svg qt6-declarative qt5-quickcontrols2 #dependencies
cp -r catpuccin-sddm-mocha /usr/share/sddm/themes/
touch /etc/sddm.conf
echo /etc/sddm.conf 
	[Theme]
	Current=catppuccin-sddm-mocha

# themes, cursors and icons
cp -r .themes ~/.themes
cp -r .local/share/icons ~/.local/share
